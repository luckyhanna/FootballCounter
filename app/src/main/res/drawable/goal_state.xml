<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#4ec640" />
            <corners
                android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <stroke
                android:color="#00000000"
                android:width="10dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#1D8311"
                android:centerColor="#4ec640"
                android:endColor="#1D8311"
                android:angle="270"
                android:gradientRadius="30dp"/>
            <corners
                android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <stroke
                android:color="#00000000"
                android:width="10dp"/>
        </shape>
    </item>
</selector>