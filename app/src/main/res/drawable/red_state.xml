<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="#70C82211" />
            <corners
                android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <stroke
                android:color="#00000000"
                android:width="10dp"
                />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#e74c3c" />
            <corners
                android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <stroke
                android:color="#00000000"
                android:width="10dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#C82211"
                android:centerColor="#e74c3c"
                android:endColor="#C82211"
                android:angle="270" />
            <corners
                android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <stroke
                android:color="#00000000"
                android:width="10dp"/>
        </shape>
    </item>
</selector>