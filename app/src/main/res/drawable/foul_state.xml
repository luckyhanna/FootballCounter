<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="@color/foul_color_transparent" />
            <corners
                android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <stroke
                android:color="#00000000"
                android:width="10dp"
                />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/foul_color_light" />
            <corners
                android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <stroke
                android:color="#00000000"
                android:width="10dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/foul_color_main"
                android:centerColor="@color/foul_color_light"
                android:endColor="@color/foul_color_main"
                android:angle="270" />
            <corners
                android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
            <stroke
                android:color="#00000000"
                android:width="10dp"/>
        </shape>
    </item>
</selector>